{{> header}}
    <!-- content section start-->
      <section>
      <div class="wrapper">
        <!-- Categories Homepage Section Start -->
        <section id="categories-homepage">
          <div class="container">
            <div class="row">
                <h3 class="section-title mb10 ml10">Contact Us</h3>
                <div class="col-md-8 col-sm-12 col-xs-12  well">
                    <h5 class="extra-subheading">If you would like to help us with a suggestion, feedback Please tell us here.</h5>
                        <form>
                          <div class="form-row">
                            <div class="form-group col-md-6 col-sm-12 col-xs-12">
                              <label for="fullname">Full Name</label>
                              <input type="text" class="form-control" id="inputfullname" placeholder="Full Name">
                            </div>
                            <div class="form-group col-md-6 col-sm-12 col-xs-12">
                              <label for="inputmobile">Mobile</label>
                              <input type="tel" class="form-control" id="inputmobile" placeholder="Mobile">
                            </div>
                          </div>
                          <div class="form-row">
                            <div class="form-group col-md-12">
                              <label for="inputemail">Email</label>
                              <input type="email" class="form-control" id="inputemail" placeholder="Email">
                            </div>
                          </div>
                          <div class="form-row">
                            <div class="form-group col-md-12">
                              <label for="inputmessage">Message</label>
                              {{!-- <input type="number" class="form-control" id="inputmessage" placeholder="Message"> --}}
                              <textarea id="inputmessage" placeholder="Message" class="form-control" rows="5"></textarea>
                            </div>
                          </div>
                          <div class="form-row mt10 mb10">
                            <div class="form-group col-md-12 col-sm-12 col-xs-12">
                              <div class="g-recaptcha" data-sitekey="6LcMbnAUAAAAALj2K6R7reHUXl7CbMuU2M64lceI"></div>
                            </div>
                          </div>
                          <div class="form-row mt10 mb10">
                            <div class="form-group col-md-12 col-sm-12 col-xs-12">
                              <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                          </div>
                          
                        </form>
                </div>
                <div class="col-md-4 col-sm-12 col-xs-12 page-sidebar">
                    {{> sidebar}}
                </div>
            </div>
            </div>
      </div>
      </section>
      <!-- Content Section End -->
      


    </div>

  {{> counter}}
  {{> footer}}