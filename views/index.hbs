    <script>

        function homeformsubmit(){
            var location = $('#location').val();
            var key = $('#keyword').val().trim().split(' ').join('-');
            if(location == undefined || location == '' || typeof location == undefined){
                location = 'best';
            }
            if(key != '' && key != undefined){
                var url = '/'+location+'/'+key;
                window.location.href = url;
                return false;
            }

        }

        $('.locationsbutton').click(function(){
            $('#location').val($(this).val());
        });
    </script>
